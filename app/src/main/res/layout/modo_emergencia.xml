<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:padding="16dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/old_italic"
        android:text="Modo Emergencia"
        android:textSize="32sp" />

    <Button
        android:id="@+id/button14"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView31"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#D6E0E7"
        android:fontFamily="@font/old_italic"
        android:text="Necesito Ayuda Urgente"
        android:textColor="#000"
        android:textSize="19dp" />

    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:backgroundTint="#D6E0E7"
        android:fontFamily="@font/old_italic"
        android:text="CONFIRMAR"
        android:textColor="#000" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText"
        android:layout_width="379dp"
        android:layout_height="341dp"
        android:layout_above="@+id/button15"
        android:layout_below="@+id/button14"
        android:background="@drawable/roundstyle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="22dp"
        android:fontFamily="@font/old_italic"
        android:hint="Intenta describir el problema brevemente para ayudarte de la manera mas rapida posible..."
        android:visibility="visible" />

</RelativeLayout>
