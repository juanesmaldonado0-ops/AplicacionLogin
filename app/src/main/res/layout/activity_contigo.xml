<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_video_contigo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodos"
    tools:context=".contigo">

    <TextView
        android:id="@+id/tituloVideoContigo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/old_italic"
        android:gravity="center"
        android:text="@string/aquÃ­_estoy_contigo"
        android:textColor="#2F4375"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <VideoView
        android:id="@+id/videoViewContigo"
        android:layout_width="368dp"
        android:layout_height="198dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewContigo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloVideoContigo" />

    <TextView
        android:id="@+id/textViewContigo"
        android:layout_width="321dp"
        android:layout_height="192dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="173dp"
        android:contentDescription="@string/descripcion_texto_accesible"
        android:fontFamily="@font/old_italic"
        android:gravity="center"
        android:text="@string/en_medio_de_tus_dificultades_recuerda_que_el_amor_de_dios_nunca_te_abandona_l_est_contigo_abraz_ndote_en_cada_paso_y_ofreci_ndote_su_fuerza_cuando_m_s_lo_necesitas_no_importa_cu_n_oscuro_sea_el_camino_su_amor_es_la_luz_que_siempre_te_guiar"
        android:textColor="#161F4E"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoViewContigo" />

</androidx.constraintlayout.widget.ConstraintLayout>
