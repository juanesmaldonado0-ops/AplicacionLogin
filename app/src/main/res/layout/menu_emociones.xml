<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/musica"
    android:gravity="center"
    android:padding="24dp">

    <Button
        android:id="@+id/btnEscribir"
        android:layout_width="244dp"
        android:layout_height="83dp"
        android:layout_gravity="end"
        android:backgroundTint="#A8B7D0"
        android:fontFamily="@font/old_italic"
        android:text="@string/escribir_en_mi_diario"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnDias"
        android:layout_width="242dp"
        android:layout_height="81dp"
        android:layout_gravity="end"
        android:layout_marginTop="38dp"
        android:backgroundTint="#A8B7D0"
        android:fontFamily="@font/old_italic"
        android:text="@string/d_as_en_tu_diario"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnFrases"
        android:layout_width="238dp"
        android:layout_height="92dp"
        android:layout_gravity="end"
        android:layout_marginTop="38dp"
        android:backgroundTint="#A8B7D0"
        android:fontFamily="@font/old_italic"
        android:text="@string/frases_diarias_de_reflexi_n"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnAsistente"
        android:layout_width="236dp"
        android:layout_height="89dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginTop="38dp"
        android:background="@drawable/asistente_button_bg"
        android:fontFamily="@font/old_italic"
        android:text="ðŸ¤– Asistente Virtual"
        android:textStyle="bold"
        android:elevation="8dp"
        android:textSize="18sp"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnVerRegistros"
        android:layout_width="236dp"
        android:layout_height="89dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginTop="38dp"
        android:backgroundTint="#A8B7D0"
        android:fontFamily="@font/old_italic"
        android:text="@string/ver_mis_registros_anteriores"
        android:textColor="#000000" />
</LinearLayout>

