<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registros_fondoaa">

    <!-- Texto inspiracional superior -->
    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/old_italic"
        android:text="Historial de Emergencias"
        android:textSize="18sp"/>

    <!-- Contenedor principal centrado -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView30"
        android:layout_above="@+id/bottomSpace"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/containerEmergencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Los registros se agregarán dinámicamente aquí -->

        </LinearLayout>
    </ScrollView>

    <!-- Botón Cerrar -->
    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/bottomSpace"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#D6E0E7"
        android:fontFamily="@font/old_italic"
        android:text="CERRAR"
        android:textColor="#000"
        android:textSize="16sp" />

    <!-- Espacio inferior para mejor centrado -->
    <View
        android:id="@+id/bottomSpace"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>