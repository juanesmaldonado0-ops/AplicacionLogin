<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/azul"
    android:padding="16dp"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/botonesVerticales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textView31"
        android:layout_width="255dp"
        android:layout_height="81dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="59dp"
        android:fontFamily="@font/old_italic"
        android:text="OPCIONES DE AYUDA"
        android:textAlignment="center"
        android:textSize="32sp" />

    <Button
        android:id="@+id/button14"
        android:layout_width="303dp"
        android:layout_height="63dp"
        android:layout_below="@+id/textView31"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#D6E0E7"
        android:fontFamily="@font/old_italic"
        android:text="Necesito Ayuda Urgente"
        android:textColor="#000"
        android:textSize="19dp" />

    <Button
        android:id="@+id/button15"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="383dp"
        android:backgroundTint="#D6E0E7"
        android:fontFamily="@font/old_italic"
        android:text="Psicologia"
        android:textAlignment="textStart"
        android:textColor="#000" />

    <Button
        android:id="@+id/button17"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button14"
        android:layout_marginTop="79dp"
        android:backgroundTint="#D6E0E7"
        android:fontFamily="@font/old_italic"
        android:text="Psiquiatria"
        android:textAlignment="textStart"
        android:textColor="#000" />

    <Button
        android:id="@+id/button18"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button14"
        android:layout_marginTop="144dp"
        android:backgroundTint="#D6E0E7"
        android:fontFamily="@font/old_italic"
        android:text="Neurologia"
        android:textAlignment="textStart"
        android:textColor="#000" />

    <ImageButton
        android:id="@+id/btnCamara"
        android:layout_width="39dp"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/button15"
        android:layout_alignParentStart="true"
        android:layout_marginStart="278dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/tel_logo" />

    <ImageButton
        android:id="@+id/btnCamara2"
        android:layout_width="39dp"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/button17"
        android:layout_alignParentStart="true"
        android:layout_marginStart="278dp"
        android:layout_marginTop="-2dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/tel_logo" />

    <ImageButton
        android:id="@+id/btnCamara3"
        android:layout_width="39dp"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/button18"
        android:layout_alignParentStart="true"
        android:layout_marginStart="281dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/tel_logo" />

</RelativeLayout>