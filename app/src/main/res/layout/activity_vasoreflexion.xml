<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/musica"
    tools:context=".vasoreflexion">

    <!-- Título -->
    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/old_italic"
        android:text="@string/Escribe_tu_reflexi_n"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- EditText para escribir reflexión -->
    <EditText
        android:id="@+id/editReflexion"
        android:layout_width="260dp"
        android:layout_height="486dp"
        android:layout_margin="16dp"
        android:autofillHints=""
        android:gravity="top"
        android:hint="@string/ahora_que_has_le_do_esta_reflexi_n_t_mate_un_momento_para_mirar_dentro_de_ti_qu_pensamientos_despert_en_ti_esta_historia_c_mo_se_conecta_con_lo_que_est_s_viviendo_escribe_con_libertad_tus_palabras_tambi_n_pueden_sanar"
        android:inputType="textMultiLine"
        android:lines="10"
        android:maxLines="15"
        android:padding="16dp"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/btnGuardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.828"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitulo" />

    <!-- Botón para guardar la reflexión -->
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Guardar_reflexi_n"
        android:textSize="16sp"
        android:backgroundTint="#D0DFF0"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/old_italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
